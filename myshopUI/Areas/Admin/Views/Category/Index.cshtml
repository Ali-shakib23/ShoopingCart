@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "View Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div>
    <a class="btn btn-primary" href="/Admin/Category/Create">Create</a>
</div>
<br/>
<table class="table table-hover" width="100">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Created at</td>
        <td>Actions</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href= "/Admin/Category/Edit/@item.Id"> Edit</a>
                <a class="btn btn-danger" href="/Admin/Category/Delete/@item.Id"> Delete</a>
            </td>
            

        </tr>
    }
</table>